<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= campgrounds.name %></h1>
        <div style="width: 30%"></div>
        <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" value="<%= campgrounds.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" value="<%= campgrounds.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" value="<%= campgrounds._id %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" value="<%= campgrounds.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            <a href="/campgrounds">Go back</a>
        </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
